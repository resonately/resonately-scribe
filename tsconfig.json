{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-jsx", // or "react" if you're using an older version of React
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": ["node"] // Add this line
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
